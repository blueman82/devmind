{
  "name": "ai-memory-app",
  "version": "1.0.0",
  "description": "AI Memory App MCP server providing conversation indexing and search with SQLite FTS5",
  "main": "src/mcp-server/mcp-server.js",
  "type": "module",
  "scripts": {
    "start": "node src/mcp-server/mcp-server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:db": "vitest run src/tests/database-manager.test.js",
    "test:mcp": "vitest run src/tests/mcp-server.test.js",
    "test:watcher": "vitest run src/tests/file-watcher.test.js",
    "test:config": "vitest run src/tests/config-validator.test.js",
    "test:git": "vitest run src/tests/git-tools.test.js",
    "dev": "node --watch src/mcp-server/mcp-server.js",
    "monitor": "node monitor-indexer.js",
    "status": "node indexer-status.js"
  },
  "dependencies": {
    "better-sqlite3": "^11.5.0",
    "chalk": "^5.6.0",
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "minimatch": "^10.0.3",
    "ora": "^8.2.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@rollup/rollup-darwin-arm64": "^4.50.0",
    "@types/better-sqlite3": "^7.6.8",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.34.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "mcp",
    "ai",
    "memory",
    "conversation",
    "indexing",
    "search",
    "sqlite",
    "fts5"
  ],
  "author": "AI Memory App",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
